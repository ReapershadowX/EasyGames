@model EasyGamesProject.Models.User
@{
    ViewData["Title"] = "Delete User";
}
<div class="form-center-wrapper">
    <h1 class="mb-4">Delete User</h1>
    <h3 class="mb-4 text-center">Are you sure you want to delete this User?</h3>

    <form asp-action="Delete" class="w-100" style="max-width: 480px;">
        <div class="mb-3">
            <label class="form-label fw-semibold">@Html.DisplayNameFor(m => m.FirstName)</label>
            <div class="form-control-plaintext">@Html.DisplayFor(m => m.FirstName)</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">@Html.DisplayNameFor(m => m.LastName)</label>
            <div class="form-control-plaintext">@Html.DisplayFor(m => m.LastName)</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">@Html.DisplayNameFor(m => m.Email)</label>
            <div class="form-control-plaintext">@Html.DisplayFor(m => m.Email)</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">@Html.DisplayNameFor(m => m.Password)</label>
            <div class="form-control-plaintext">@Html.DisplayFor(m => m.Password)</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">@Html.DisplayNameFor(m => m.Role)</label>
            <div class="form-control-plaintext">@Html.DisplayFor(m => m.Role)</div>
        </div>

        <div class="mb-4">
            <label class="form-label fw-semibold">@Html.DisplayNameFor(m => m.CreatedDate)</label>
            <div class="form-control-plaintext">@Html.DisplayFor(m => m.CreatedDate)</div>
        </div>

        <input type="hidden" asp-for="UserId" />

        <div class="d-flex justify-content-between">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary align-self-center">Back to List</a>
        </div>
    </form>
</div>
