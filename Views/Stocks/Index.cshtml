@model IEnumerable<EasyGamesProject.Models.Stock>
@{
    ViewData["Title"] = "Index";
}
<h1>Inventory</h1>
@if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Source)</th> <!-- Added -->
            <th>@Html.DisplayNameFor(model => model.BuyPrice)</th> <!-- Added -->
            <th>@Html.DisplayNameFor(model => model.SellPrice)</th> <!-- Already here as Price but renamed to SellPrice -->
            <th>Profit Margin</th> <!-- Added -->
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td>@Html.DisplayFor(modelItem => item.Source)</td> <!-- Added -->
                <td>@item.BuyPrice.ToString("C")</td> <!-- Added formatting -->
                <td>@item.SellPrice.ToString("C")</td> <!-- Formatting -->
                <td>@item.ProfitMargin.ToString("F2")%</td> <!-- Added with formatting -->
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                <td>
                    @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.StockId">Edit</a>
                        <text> | </text>
                        <a asp-action="Details" asp-route-id="@item.StockId">Details</a>
                        <text> | </text>
                        <a asp-action="Delete" asp-route-id="@item.StockId">Delete</a>
                    }
                    else if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Proprietor"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.StockId">Edit</a>
                        <text> | </text>
                        <a asp-action="Details" asp-route-id="@item.StockId">Details</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.StockId">Details</a>
                    }
                    @* Add to Cart button only for Customers and Guests *@
                    @if ((User?.Identity?.IsAuthenticated == true && User.IsInRole("Customer")) || !(User?.Identity?.IsAuthenticated == true))
                    {
                        <form asp-controller="ShoppingCarts" asp-action="AddToCart" method="post" style="display:inline; margin-left:10px;">
                            <input type="hidden" name="stockId" value="@item.StockId" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-primary btn-sm">Add to Cart</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
