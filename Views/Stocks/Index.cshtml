@model IEnumerable<EasyGamesProject.Models.Stock>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

@* Show "Create New" link only to authenticated Admin users *@
@if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                <td>
                    @* Admins see Edit, Details, and Delete links *@
                    @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.StockId">Edit</a>
                
                        <text> | </text>
                        <a asp-action="Details" asp-route-id="@item.StockId">Details</a>

                        <text> | </text>
                        <a asp-action="Delete" asp-route-id="@item.StockId">Delete</a>
                    }
                    @* Moderators see Edit and Details links *@
                    else if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Moderator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.StockId">Edit</a>
                
                        <text> | </text>
                        <a asp-action="Details" asp-route-id="@item.StockId">Details</a>
                    }
                    @* Other users and guests see Details only *@
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.StockId">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
