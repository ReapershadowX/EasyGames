@model IEnumerable<EasyGamesProject.Models.Sale>
@{
    Layout = "~/Views/Shared/_POSLayout.cshtml";
    ViewData["Title"] = "Sales History";
}

<h2>Sales History – @ViewBag.ShopName</h2>

<form class="row g-3 mb-4" method="get" asp-action="SalesHistory" asp-route-shopId="@(ViewBag.ShopId)">
    <div class="col-auto">
        <label for="fromDate" class="form-label">From</label>
        <input type="date" id="fromDate" name="fromDate" value="@(ViewBag.FromDate?.ToString("yyyy-MM-dd"))" class="form-control" />
    </div>
    <div class="col-auto">
        <label for="toDate" class="form-label">To</label>
        <input type="date" id="toDate" name="toDate" value="@(ViewBag.ToDate?.ToString("yyyy-MM-dd"))" class="form-control" />
    </div>
    <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Customer</th>
            <th>Item</th>
            <th class="text-center">Qty</th>
            <th class="text-end">Unit Price</th>
            <th class="text-end">Discount</th>
            <th class="text-end">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.SaleDate.ToString("g")</td>
                <td>
                    @(sale.User != null
                                    ? $"{sale.User.FirstName} {sale.User.LastName}"
                                    : sale.CustomerPhone ?? "Guest")
            </td>
            <td>@sale.Stock?.Name</td>
            <td class="text-center">@sale.Quantity</td>
            <td class="text-end">@sale.UnitPrice.ToString("F2")</td>
            <td class="text-end">@sale.DiscountAmount.ToString("F2")</td>
            <td class="text-end">@sale.TotalPrice.ToString("F2")</td>
        </tr>
                }
    </tbody>
</table>
