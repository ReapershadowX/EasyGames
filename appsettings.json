{
  // Database connection configuration for Entity Framework Core
  "ConnectionStrings": {
    // SQLite database connection string for Easy Games application
    // Data Source specifies the database file name and location
    // The .db file will be created in the project root directory
    "DefaultConnection": "Data Source=EasyGames.db"
  },

  // Application logging configuration
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Hosts that are allowed to access this application
  "AllowedHosts": "*"
}
